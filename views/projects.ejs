<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head'); %>
</head>

<body>

    <%- include('includes/navbar'); %>

    <div id="sb-layout">
        <div id="sb-sidebar">
            <%- include('includes/sidebar', {menu: 'projects'}); %>
        </div>
        <div id="sb-content">
            <main>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <h3>Projects</h3>
                        </div>
                        <div class="col-auto">
                            <a class="btn btn-success ml-2" href="/add-projects">Add Projects</a>
                        </div>
                    </div>
                    <hr/>

                    <div class="card shadow">
                        <div class="card-header">
                            <div class="row">
                                <div class="col">
                                    <h5 class="mt-2">Projects</h5>
                                </div>
                                <div class="col-auto">
                                    <form method="GET" action="/projects" class="form-inline">
                                        <div class="input-group">
                                            <input type="search" class="form-control" placeholder="Search" name="search" value="<%= search %>">
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-secondary" type="submit">
                                                    <i class="far fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="list-group">

                                <% if (projects.length == 0) { %>
                                    <li class="list-group-item">No Projects</li>
                                <% } else { %>

                                    <% projects.forEach(function(project, i){ %>

                                        <div class="list-group-item">
                                            <div class="row">
                                                <div class="col-7">
                                                    <div class="text-truncate">
                                                        <a href="projects/<%= project.id %>"><%= project.url %></a>
                                                    </div>
                                                </div>
                                                <div class="col-5">
                                                    <div class="ml-2 text-right">
                                                        <div class="text-truncate d-inline-block mr-2" style="max-width: 140px;">
                                                            <div class="small">
                                                                <%if (project.status == 1) {%>
                                                                    <i class="far fa-clock"></i>
                                                                    <span title="<%= project.status_message %>">
                                                                        <%= project.status_message %>
                                                                    </span>
                                                                <%}%>
                                                                <%if (project.status == 2) {%>
                                                                    <i class="far fa-check text-success"></i>
                                                                    <span class="text-success" title="<%= project.status_message %>">
                                                                        <%= project.status_message %>
                                                                    </span>
                                                                <%}%>
                                                                <%if (project.status == 3) {%>
                                                                    <i class="far fa-times text-danger"></i>
                                                                    <span class="text-danger" title="<%= project.status_message %>">
                                                                        <%= project.status_message %>
                                                                    </span>
                                                                <%}%>
                                                            </div>
                                                        </div>
                                                        <form method="POST" action="/projects/delete/<%= project.id %>" class="d-inline-block">
                                                            <a class="btn btn-sm btn-outline-danger pt-0 pb-0 btn-submit-parent" href="#">
                                                                <i class="far fa-trash-alt"></i>
                                                            </a>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    <% }); %>

                                <% } %>

                            </div>

                            <div class="row mt-3">
                                <div class="col"></div>
                                <div class="col-auto">

                                    <div class="btn-toolbar">
                                        <div class="btn-group mt-1">
                                            <a href="projects?page=<%= previousPage %>&pageSize=<%= pageSize %>" class="btn btn-outline-primary">Previous</a>

                                            <% for (let i = page - 2; i < page; i++) { %>
                                                <% if (i >= 1) { %>
                                                    <a href="projects?page=<%= i %>&pageSize=<%= pageSize %>" class="btn btn-outline-primary"><%= i %></a>
                                                <% } %>
                                            <% } %>
                                            <a href="" class="btn btn-primary"><%= page %></a>
                                            <% for (let i = page + 1; i <= page + 2; i++) { %>
                                                <a href="projects?page=<%= i %>&pageSize=<%= pageSize %>" class="btn btn-outline-primary"><%= i %></a>
                                            <% } %>

                                            <a href="projects?page=<%= nextPage %>&pageSize=<%= pageSize %>" class="btn btn-outline-primary">Next</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <%- include('includes/footer'); %>

</body>

</html>
